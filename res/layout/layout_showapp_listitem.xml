<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/home_entry_item"
    android:padding="10dp" >
    <!-- background 只能改变背景颜色属性   button 可以改变复选框的框属性和颜色属性 -->
    <CheckBox
        android:id="@+id/cb_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:button="@drawable/check_rect_correct"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cb_del"
        android:src="@drawable/azy" />
    <!-- maxLength最大字符长度 -->

    <TextView
        android:id="@+id/tv_app_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_app_icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_app_icon"
        android:maxLength="6"
        android:singleLine="true"
        android:text="QQ"
        android:textSize="16sp" />

	<TextView 
	    android:id="@+id/tv_app_packagename"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@id/iv_app_icon"
	    android:layout_toRightOf="@id/iv_app_icon"
	    android:layout_marginLeft="10dp"
	    android:singleLine="true"
	    android:text="应用程序完整包名"
	    android:textSize="12sp"/>
	<TextView 
	    android:id="@+id/tv_app_version"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@id/iv_app_icon"
	    android:singleLine="true"
	    android:maxLength="10"
	    android:text="v1.1.1"
	    android:textSize="10sp"/>
</RelativeLayout>