<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
     android:background="@drawable/home_entry_item"
     android:clickable="true"
     android:padding="10dp">
    <CheckBox 
        android:id="@+id/cb_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/check_rect_correct"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <ImageView 
        android:id="@+id/iv_app_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cb_clear"
        android:src="@drawable/azy"/>
    <TextView 
        android:id="@+id/tv_app_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_app_icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_app_icon"
        android:singleLine="true"
        android:text="QQ"
        android:textSize="16sp"/>
    <TextView 
        android:id="@+id/tv_app_packagename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_app_icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_app_icon"
        android:singleLine="true"
        android:text="内存:10.2mb"
        android:textSize="12sp"/>
    <TextView 
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_app_icon"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:text="系统进程"
        android:textColor="@color/red"
        android:textSize="10sp"/>
</RelativeLayout>
