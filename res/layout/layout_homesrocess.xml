<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_weight="1"
    android:background="@drawable/home_entry_item_normal">
    <edu.feicui.app.phone.view.CleararcView 
        android:id="@+id/homeclear_arcs"
        android:layout_width="@dimen/home_cleararc_width"
        android:layout_height="@dimen/home_cleararc_height"
        android:layout_centerInParent="true"/>
    <ImageView 
        android:id="@+id/iv_homeclear"
        android:layout_width="@dimen/home_cleararc_width_img"
        android:layout_height="@dimen/home_cleararc_height_img"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:src="@drawable/home_score_bg"/>
    <TextView 
        android:id="@+id/tv_homeclear_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_homeclear"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/home_cleararc_text_bottom"
        android:background="@drawable/homeclear_text"
        android:clickable="true"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:text="@string/home_clear"
        android:textColor="@color/white"
        android:textSize="@dimen/home_cleararc_text_textsize"/>
    <TextView 
        android:id="@+id/tv_score5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_homeclear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/home_cleararc_score_top"
        android:text="80"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/home_cleararc_score_textsize"
        android:textStyle="bold"/>
    <TextView 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_marginLeft="6dp"
        android:text="%"
        android:layout_alignBaseline="@id/tv_score5"
        android:layout_toRightOf="@id/tv_score5"/>
</RelativeLayout>
